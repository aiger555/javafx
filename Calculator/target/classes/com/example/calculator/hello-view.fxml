<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="208.0" prefWidth="400.0" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator.HelloController">
   <TextField fx:id="display" alignment="CENTER" editable="false" promptText="0" styleClass="display" />
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="5.0">
      <Button onAction="#handleDigit" text="7" />
      <Button onAction="#handleDigit" text="8" />
      <Button onAction="#handleDigit" text="9" />
      <Button onAction="#handleOperator" text="*" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="5.0">
      <Button onAction="#handleDigit" text="4" />
      <Button onAction="#handleDigit" text="5" />
      <Button onAction="#handleDigit" text="6" />
      <Button onAction="#handleOperator" text="-" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="5.0">
      <Button onAction="#handleDigit" text="1" />
      <Button onAction="#handleDigit" text="2" />
      <Button onAction="#handleDigit" text="3" />
      <Button onAction="#handleOperator" text="+" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" spacing="5.0">
      <Button onAction="#handleDigit" text="0" />
      <Button onAction="#clear" text="C" />
      <Button onAction="#calculate" text="=" />
      <Button onAction="#handleOperator" text="/" />
   </HBox>
</VBox>
